{
    "name": "mlops-workshop-dev-environment-demo",
    "dockerComposeFile": "docker-compose.yml",
    "service": "dev-environment",
    "workspaceFolder": "/workspaces/mlops-workshop-dev-environment-demo",
    "settings": {
        "terminal.integrated.profiles.linux": {
            "zsh": {
                "path": "/bin/zsh"
            },
            "python": {
                "path": "/usr/local/bin/python"
            },
            "tmux": {
                "path": "bash",
                "args": [
                    "-c",
                    "tmux new -ADs ${workspaceFolderBasename}"
                ],
                "icon": "terminal-tmux"
            }
        },
        "terminal.integrated.defaultProfile.linux": "zsh",
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true
    },
    "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.black-formatter",
        "ms-python.flake8",
        "ms-toolsai.jupyter",
        "eamodio.gitlens",
        "gruntfuggly.todo-tree",
        "njpwerner.autodocstring",
        "congyiwu.vscode-jupytext"
    ],
    "features": {
        "ghcr.io/iterative/features/dvc:1": "1.0.4",
	"ghcr.io/devcontainers/features/nvidia-cuda:1": "1.1.0",
	"ghcr.io/devcontainers/features/terraform:1": "1.3.5",
	"ghcr.io/iterative/features/nvtop:1": "1.0.0"
    },
    "hostRequirements": {
        "gpu": "optional"
    },
    "remoteUser": "vscode",
    "postStartCommand": "./setup.sh"
}
